<form
  class="mx-auto bg-light rounded shadow p-4 form__computers"
  action="/computers/create"
  method="post"
>

<a href="/computers" class="form__close">
<i class="bi bi-x-circle-fill"></i></a>


  <h2 class="text-center title__form">
    Create computer
  </h2>

    <div class="w-100">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="name"
        name="name"
      />
    </div>

    <div class="w-100">
      <label for="ip" class="form-label">Ip</label>
      <input
        type="text"
        class="form-control"
        id="ip"
        placeholder="ip"
        name="ip"
      />
    </div>

  <div class="mb-3">
    <label for="role" class="form-label">Role</label>
    <div class="form-floating">
      <select
        name="role"
        class="form-select"
        id="role"
        aria-label="Floating label select example"
      >
        <option value="dhcp">Dhcp</option>
        <option value="dns">Dns</option>
        <option value="web">Web</option>
        <option value="snmp">Snmp</option>
        <option value="client">Client</option>
      </select>
      <label class="text-black" for="role">Select role</label>
    </div>
  </div>

<div class="d-flex justify-content-center">
  <button class="btn btn-success w-50" type="submit">
    <i class="bi bi-send-fill me-2"></i>Send
  </button>
  </div>
</form>