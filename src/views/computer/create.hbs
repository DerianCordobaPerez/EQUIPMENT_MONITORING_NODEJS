<h2 class="text-center text-muted">
  Create computer
</h2>

<form action="/computers/create" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      placeholder="name"
      name="name"
    />
  </div>

  <div class="mb-3">
    <label for="ip" class="form-label">Ip</label>
    <input
      type="text"
      class="form-control"
      id="ip"
      placeholder="ip"
      name="ip"
    />
  </div>

  <div class="mb-3">
    <label for="role" class="form-label">Role</label>
    <input
      type="text"
      class="form-control"
      id="role"
      placeholder="role"
      name="role"
    />
  </div>

  <button class="btn btn-primary" type="submit">
    Send
  </button>
</form>