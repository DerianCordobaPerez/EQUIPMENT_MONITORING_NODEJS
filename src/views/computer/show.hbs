<div
  class="d-flex align-items-center w-100 justify-content-between bg-dark px-4 py-2 shadow rounded mb-4"
>
  <article>
    <h3 class="text-white">
      Monitoring
      <span class="fw-bold text-decoration-underline">
        {{computer.name}}
      </span>
      pc
    </h1>
  </article>

  <form
    action="/computers/{{computer.ip}}/destroy?_method=DELETE"
    method="post"
  >
    <input type="hidden" name="_method" value="DELETE" />
    <button class="btn btn-danger" type="submit">
      Delete
    </button>
  </form>
</div>

<div class="row">
  {{#each monitoring}}
    <div class="col-md-6 mt-4 shadow py-2">
      <label for="{{this.command}}" class="fw-bold text-white text-decoration-underline">
        {{#capitalize this.command}} {{/capitalize}}
      </label>
      
      <div class="d-flex align-items-center">
        {{#checkLength this.output 500}}
          <textarea
            type="text"
            class="form-control"
            id="{{this.command}}"
            name="{{this.command}}"
            rows="7"
          >
            {{#trim this.output}} {{/trim}}
          </textarea>
        {{else}}
          <span class="text-muted">
            {{this.output}}
          </span>
        {{/checkLength}}
      </div>
    </div>
  {{/each}}
</div>